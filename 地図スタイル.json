{
    "layers": [
        {
            "id": "polygon-layer",
            "type": "fill",
            "filter": ["==", ["get", "type"], "polygon"],
            "paint": {
                "fill-color": "rgba(0, 0, 0, 0)",
                "fill-outline-color": "#000000"
            }
        },
        {
            "id": "line-layer",
            "type": "line",
            "source": "geojson-source",
            "paint": {
                "line-color": ["get", "line_color"],  
                "line-width": 3,                      
                "line-opacity": 0.8                   
            },
            "layout": {
                "line-cap": "round",                 
                "line-join": "round"                  
            }
        },
        {
            "id": "point-layer",
            "type": "circle",
            "filter": ["==", ["get", "type"], "point"],
            "paint": {
                "circle-radius": 6,
                "circle-color": "#ff0000",
                "circle-stroke-width": 3,
                "circle-stroke-color": "#ffffff"
            }
        }
    ]
}
